<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/road"
    tools:context="com.example.vitalya.myapplication._3RefuelingActivity">
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/textName"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#BCAAA4"
        android:text="Заправка"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textViewData"
            android:layout_width="385dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Дата:"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/editTextCalendar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="@string/select_date"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textViewMilePrev"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Общий пробег:"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />
        <EditText
            android:id="@+id/editTextKm2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="введите пробег в километрах"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textViewMileage"
            android:layout_width="385dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Пробег с последней заправки:"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp"        />
        <EditText
            android:id="@+id/editTextKm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:hint="введите пробег в километрах"
            android:inputType="number"
            android:textAlignment="center"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textViewFilled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Заправлено:"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/editTextL"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:text=""
            android:textSize="12sp"
            android:textAlignment="center"
            android:hint="литры"/>
        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Цена за 1л"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
        <EditText
            android:id="@+id/editTextR"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="numberDecimal"
            android:textAlignment="center"
            android:hint="Стоимость заправки"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Стоимость:"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/textViewRub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="12sp"
            android:hint="рублей"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"/>
        <TextView
            android:id="@+id/textViewKml100"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Расход литров:"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewKml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="л/100км"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="15sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="198dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="Сохранить"
            android:textAlignment="center"/>
        <Button
            android:id="@+id/buttonMainMenu"
            android:layout_width="177dp"
            android:layout_height="60dp"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="center"
            android:linksClickable="false"
            android:text="Главное меню"/>

        <Button
            android:id="@+id/buttonKml"
            android:layout_width="177dp"
            android:layout_height="60dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:text="Расход литров"
            android:textAlignment="center" />
    </LinearLayout>




</LinearLayout>